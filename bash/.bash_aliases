alias please="sudo apt"

# Apostrophe Flatpak
alias apostrophe="flatpak run org.gnome.gitlab.somas.Apostrophe"

# CMake
alias cmakeb="cmake -B build"
alias cbuild="cmake --build build"
alias cclean="cmake --build build --target clean"
alias cmtest="cmake --build build --target test"

